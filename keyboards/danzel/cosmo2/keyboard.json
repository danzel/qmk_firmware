{
    "manufacturer": "danzel",
    "keyboard_name": "cosmo2",
    "maintainer": "danzel",
    "development_board": "kb2040",
    "diode_direction": "COL2ROW",
    "features": {
        "bootmagic": true,
        "command": false,
        "console": false,
        "extrakey": true,
        "mousekey": true,
        "nkro": true
    },
    "matrix_pins": {
        "cols": ["GP6", "GP7", "GP8", "GP9", "GP10", "GP19", "GP20", "GP18"],
        "rows": ["GP2", "GP3", "GP4", "GP5"]
    },
    "bootmagic": {
        "enabled": true,
        "matrix": [1, 7]
    },
    "split": {
        "enabled": true,
        "serial": {
            "driver": "vendor"
        },
        "bootmagic": {
            "matrix": [1, 7]
        }
    },
    "url": "",
    "usb": {
        "device_version": "1.0.0",
        "pid": "0x0000",
        "vid": "0xFEED"
    },
    "layouts": {
