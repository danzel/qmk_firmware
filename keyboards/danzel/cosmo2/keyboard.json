            "layout": [
                //[row,col]
                //First two are row shifted for pinky
                {"matrix": [1, 7], "x": 0, "y": 0.25},
                {"matrix": [1, 6], "x": 1, "y": 0.25},
                {"matrix": [0, 5], "x": 2, "y": 0.125},
                {"matrix": [0, 4], "x": 3, "y": 0},
                {"matrix": [0, 3], "x": 4, "y": 0.125},
                {"matrix": [0, 2], "x": 5, "y": 0.25},

                {"matrix": [4, 2], "x": 8, "y": 0.25},
                {"matrix": [4, 3], "x": 9, "y": 0.125},
                {"matrix": [4, 4], "x": 10, "y": 0},
                {"matrix": [4, 5], "x": 11, "y": 0.125},
                {"matrix": [5, 6], "x": 12, "y": 0.25},
                {"matrix": [5, 7], "x": 13, "y": 0.25},

                {"matrix": [2, 7], "x": 0, "y": 1.25},
                {"matrix": [2, 6], "x": 1, "y": 1.25},
                {"matrix": [1, 5], "x": 2, "y": 1.125},
                {"matrix": [1, 4], "x": 3, "y": 1},
                {"matrix": [1, 3], "x": 4, "y": 1.125},
                {"matrix": [1, 2], "x": 5, "y": 1.25},

                {"matrix": [5, 2], "x": 8, "y": 1.25},
                {"matrix": [5, 3], "x": 9, "y": 1.125},
                {"matrix": [5, 4], "x": 10, "y": 1},
                {"matrix": [5, 5], "x": 11, "y": 1.125},
                {"matrix": [6, 6], "x": 12, "y": 1.25},
                {"matrix": [6, 7], "x": 13, "y": 1.25},

                //There is no bottom pinky stretch
                {"matrix": [3, 6], "x": 1, "y": 2.25},
                {"matrix": [2, 5], "x": 2, "y": 2.125},
                {"matrix": [2, 4], "x": 3, "y": 2},
                {"matrix": [2, 3], "x": 4, "y": 2.125},
                {"matrix": [2, 2], "x": 5, "y": 2.25},

                {"matrix": [6, 2], "x": 8, "y": 2.25},
                {"matrix": [6, 3], "x": 9, "y": 2.125},
                {"matrix": [6, 4], "x": 10, "y": 2},
                {"matrix": [6, 5], "x": 11, "y": 2.125},
                {"matrix": [7, 6], "x": 12, "y": 2.25},
                //There is no bottom pinky stretch

                //Bonus keys for non-pinky fingers
                {"matrix": [3, 5], "x": 3, "y": 3.125}
                {"matrix": [3, 4], "x": 4, "y": 3}
                {"matrix": [3, 3], "x": 5, "y": 3.125}

                {"matrix": [7, 3], "x": 9, "y": 3.125}
                {"matrix": [7, 4], "x": 10, "y": 3}
                {"matrix": [7, 5], "x": 11, "y": 3.125}


                //Thumbs
                {"matrix": [3, 2], "x": 3.5, "y": 4.25},
                {"matrix": [3, 1], "x": 4.5, "y": 4.5},
                {"matrix": [3, 0], "x": 5.5, "y": 4.75},

